@*@page "/counter"
@page "/counter/{value:int}"*@
@inherits CounterBase

@*<MicrosoftLink></MicrosoftLink>*@

@if (Loading)
{
    <p>Loading...</p>
}
else
{

    <h1>Counter</h1>

    <p>Current count: @currentCount</p>

    <button class="btn btn-primary" 
            style="color: @Color" 
            disabled="@(currentCount >= 20)" 
            @onclick="IncrementCount"
            @onclick:stopPropagation="true"
            >Click me
    </button>
    <button class="btn btn-primary" onclick="Increment3()">Increment 3</button>

    <CounterSquare></CounterSquare>
}